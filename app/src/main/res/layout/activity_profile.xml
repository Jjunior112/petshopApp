<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:padding="24dp"
    tools:context=".ProfileActivity">


    <TextView
        android:id="@+id/textFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Nome"
        android:textColor="#215247"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="Email:"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFullName" />

    <TextView
        android:id="@+id/textAddress"
        android:layout_width="295dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:text="EndereÃ§o:"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmail" />

    <TextView
        android:id="@+id/textCep"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:text="CEP:"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAddress" />

    <TextView
        android:id="@+id/textCity"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:text="Cidade:"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCep" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/textCity"
        app:layout_constraintBottom_toTopOf="@id/buttonLogout">

        <ImageButton
            android:id="@+id/buttonEditProfile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#4CAF50"
            android:contentDescription="Editar perfil"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/buttonDeleteProfile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#E53935"
            android:contentDescription="Excluir conta"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginTop="120dp"
        android:background="@android:color/transparent"
        android:text="Logout"
        android:textColor="#E53935"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCity" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>