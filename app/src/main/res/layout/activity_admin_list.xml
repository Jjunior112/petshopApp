<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    tools:context=".activities.ListAdminActivity">

    <!-- Botão: Clientes -->

    <!-- Botão: Funcionários -->

    <!-- Botão: Agendamentos -->

    <!-- Botão: Serviços -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="Painel de controle"
        android:textColor="#5ac0af"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClients"
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#5ac0af"
        android:text="Clientes"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnEmployees"
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5ac0af"
        android:text="Funcionários"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClients" />

    <Button
        android:id="@+id/btnSchedulings"
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5ac0af"
        android:text="Agendamentos"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmployees" />

    <!-- Botão: Promoções -->

    <Button
        android:id="@+id/btnServices"
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5ac0af"
        android:text="Serviços"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSchedulings" />

    <!-- Bottom Navigation -->

    <Button
        android:id="@+id/btnPromotions"
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#5ac0af"
        android:text="Promoções"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnServices" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
